{
    "manifest_version": 3, 
    "name": "Text To Speech Highlighter",
    "version": "0.1.0",
    "minimum_chrome_version": "23",
    "description": "Highlight text while reading it out loud",    
    "icons": {

    },    
    "permissions": [
        "activeTab",
        "declarativeContent",
        "storage",
        "tts",
        "scripting",
        "contextMenus",
        "sidePanel"
    ],
    "host_permissions": [
        "*://*/*"
    ],
    "background": {
        "service_worker": "service-worker.js",
        "type": "module"
    },
    "side_panel": {
        "title": {
            "de": "Text To Speech Highlighter",
            "en": "Text To Speech Highlighter"
        },
        "default_path": "sidepanel/page.html"
    },
    "content_scripts": [
        {
            "matches": ["*://*/*"],
            "js": [
                "/node_modules/jquery/dist/jquery.min.js",
                "content-script.js"
            ],
            "run_at": "document_end"
        }
    ]
}
